    "version": "0.2.0",
    "configurations": [
        {
            "name": "client",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/mcpcli"
        },
        {
            "name": "integration tests",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/mcpsvr/integration_tests",
            "buildFlags": [
                "-tags=goexperiment.jsonv2"
            ],
        },
        {
            "name": "Local MCP",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/mcpsvr",
            "buildFlags": [
                "-tags local goexperiment.jsonv2"
            ],
            "envFile": "${workspaceFolder}/mcpsvr/.env"
        },
        {
            "name": "Remote MCP",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/mcpsvr",
            "buildFlags": [
                "-tags=remote goexperiment.jsonv2"
            ],
            "envFile": "${workspaceFolder}/mcpsvr/.env"
        },
        {
            "name": "Local & Remote MCP",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/mcpsvr",
            "buildFlags": [
                "-tags=local remote goexperiment.jsonv2"
            ],
            "envFile": "${workspaceFolder}/mcpsvr/.env"
        }
    ]
}