    "version": "0.2.0",
    "configurations": [
        {
            "name": "MCP Host CLI",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/mcpcli"
        },
        {
            "name": "MCP Server Integration Tests",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/mcpsvr/integration_tests",
            "buildFlags": [
                "-tags=goexperiment.jsonv2"
            ],
        },
        {
            "name": "MCP Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/mcpsvr",
            "buildFlags": [
                "-tags=local,goexperiment.jsonv2"
            ],
            "envFile": "${workspaceFolder}/mcpsvr/.env"
        },
             {
            "name": "Text Streamer",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/zstream",
            "buildFlags": [
                "-tags=local,goexperiment.jsonv2"
            ]
        }
    ]
}