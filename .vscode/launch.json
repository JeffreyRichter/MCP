{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "CLI",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/mcpcli",
            "console": "integratedTerminal"
        },
        {
            "name": "Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/mcpsvr",
            "buildFlags": [
                "-tags=local,goexperiment.jsonv2"
            ],
            "envFile": "${workspaceFolder}/mcpsvr/.env",
            "args": [
                "-pid=37500"
            ]
        },
        {
            "name": "Server Integration Tests",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/mcpsvr/integration_tests",
            "buildFlags": [
                "-tags=goexperiment.jsonv2"
            ],
        },
        {
            "name": "Text Streamer",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/zstream",
            "buildFlags": [
                "-tags=local,goexperiment.jsonv2"
            ]
        },
        {
            "name": "TUI",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/mcptui"
        },
    ]
}